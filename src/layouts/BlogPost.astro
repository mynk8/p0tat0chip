---
// src/layouts/BlogPost.astro
import '../styles/global.css';

const { frontmatter } = Astro.props;
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{frontmatter.title}</title>
</head>
<body>
<div class="container">
    <header>
        <nav>
            <a href="/">Home</a> /
            <a href="/blog">Blog</a>
        </nav>
    </header>

    <main>
        <h1>{frontmatter.title}</h1>
        <time class="post-date">{new Date(frontmatter.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        })}</time>

        <article>
            <slot />
        </article>
    </main>

    <footer>
        <p>Â© {new Date().getFullYear()} My Minimalist Blog</p>
    </footer>
</div>
</body>
</html>